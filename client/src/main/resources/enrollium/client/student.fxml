<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="enrollium.client.StudentController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button fx:id="createButton" text="Create Random Student"
            onAction="#handleCreate" maxWidth="Infinity"/>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="studentIdField" promptText="Enter Student ID"
                   HBox.hgrow="ALWAYS"/>
        <Button fx:id="getButton" text="Get Student"
                onAction="#handleGet"/>
    </HBox>

    <Label fx:id="resultLabel" wrapText="true" maxWidth="Infinity"
           style="-fx-border-color: lightgray; -fx-padding: 10; -fx-border-radius: 5;"/>
</VBox>
